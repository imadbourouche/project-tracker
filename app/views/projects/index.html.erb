<% content_for :title, "Projects" %>

<h1>Projects</h1>

<% if user_signed_in? %>
  <%= link_to "New Project", new_project_path, class: "btn btn-primary mb-3" %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Amount</th>
      <th>Left Amount</th>
      <th>Submission Date</th>
      <th>Final Date</th>
      <th>User</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= number_to_currency(project.total_amount) %></td>
        <td><%= number_to_currency(project.left_amount) %></td>
        <td><%= project.submission_date %></td>
        <td><%= project.final_date %></td>
        <td><%= project.user.email %></td>
        <td>
          <%= link_to "Show", project_path(project), class: "btn btn-sm btn-info" %>
          <% if current_user == project.user %>
            <%= link_to "Edit", edit_project_path(project), class: "btn btn-sm btn-warning" %>
            <%= button_to "Delete", project, method: :delete, data: { turbo_confirm: "Are you sure?" }, form: { class: "d-inline" }, class: "btn btn-sm btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
